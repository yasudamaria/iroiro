<head>
  <title>お問い合わせ</title>
  <%= stylesheet_link_tag 'contacts', :media => "all" %>
</head>

<div class="toptop"></div>
<div class="midasi4">
  <h3>お問い合わせ</h3>
</div>



<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="post-container">
    <% if @contact.errors.any? %>
      <p class="er-h1">入力した内容にエラーが<%= @contact.errors.count %>件あります</p>
    <% end %>

    <div class="form-group">
      <div class="lab"><%= f.label :name, 'お名前' %><p class="h">*</p></div>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <div class="lab"><%= f.label :email, 'メールアドレス' %><p class="h">*</p></div>
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>
    
    <div class="form-message">
      <div class="lab"><%= f.label :message, 'メッセージ' %><br><p class="h">*</p></div>
      <%= f.text_area :message, class: 'form-control' %>
    </div>
  </div>
  <div class="sub-k">
    <input type="submit" value="確認画面へ" class="kakunin">
  </div>
<% end %>


<div class="a-right">
  <a class="showshow" href="/top/">トップページへ</a>
</div>

<div class="font">
  <script type="text/javascript" src="https://minmoji.ucda.jp/sealjs/https%3A__iroworld.herokuapp.com_" charset="UTF-8"></script>
</div>