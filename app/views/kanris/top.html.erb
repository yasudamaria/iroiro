<head>
  <title>トップページ</title>
  <%= stylesheet_link_tag 'top', :media => "all" %>
</head>
<meta name="viewport" content="width=device-width,initial-scale=1.0">
<div class="toptop"></div>


<div class="midasi1">
  <h1>注目記事</h1>
</div>

<div class="previews">
  <div class="slider">
    <% @notekanris.each.with_index(1) do |t, index| %>
      <div class="kanri3">
       <div class="rank">
          <% case index when 1 %>
            <div class="rank-a">
              <i class="fas fa-crown" style='color: #f6aa00;'></i>
            </div>
            <div class="rank-1">1</div>
          <% when 2 %>
            <div class="rank-a">
              <i class="fas fa-crown" style='color: #84919e;'></i>
            </div>
            <div class="rank-2">2</div>
          <% when 3 %>
            <div class="rank-a">
              <i class="fas fa-crown" style='color: #804000;'></i>
            </div>
            <div class="rank-3">3</div>
          <% else %>
            <div class="rank-a">
              <%= index %>
            </div>
          <% end %>
        </div>
        <div class="image-con" alt="<%= t.alt %>">
          <%= image_tag t.image_url, width: '100%', height: '100%' if t.image? %><br>
        </div>
        <div class="title-box">
          <div class="genre"><%= t.genre %><br></div>
          <div class="title"><%= t.title %></div>
        </div>
        <a  class ="a-alt" href="/kanris/<%= t.id %>" title="リンク先は<%= t.title %>の詳細"></a>
      </div>     
    <% end %>
  </div>
</div>
<div class="a-right">
  <a class="showshow" href="/nindex/">もっとみる</a>
</div>


<div class="toptop"></div>




<div class="midasi1">
 <h1>新着記事</h1>
</div>

<div class="previews">
  <div class="slider">
    <% @newkanris.each.with_index(1) do |t, index| %>
      <div class="kanri3">
        <div class="image-con" alt="<%= t.alt %>">
          <%= image_tag t.image_url, width: '100%', height: '100%' if t.image? %><br>
        </div>
        <div class="rank">
          <% case index when 1 %>
            <div class="rank-a">
              新
            </div>
          <% else %>
            <div class="rank-a">
              新
            </div>
          <% end %>
        </div>
        <div class="title-box">
          <div class="genre"><%= t.genre %><br></div>
          <div class="title"><%= t.title %></div>
        </div>
        <a href="/kanris/<%= t.id %>" title="リンク先は<%= t.title %>の詳細"></a>
      </div>
    <% end %>
  </div>
</div>

<div class="a-right">
  <a class="showshow" href="/kanris/">もっとみる</a>
</div>





<div class="font">
 <script type="text/javascript" src="https://minmoji.ucda.jp/sealjs/https%3A__iroworld.herokuapp.com_" charset="UTF-8"></script>
</div>

